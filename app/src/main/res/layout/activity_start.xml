<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="android.chatapp.ib.ichat.StartActivity">


    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/start_icon"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_below="@+id/start_icon"
        android:layout_centerHorizontal="true"
        android:textColor="@color/bgwhite"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30dp"/>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:layout_centerVertical="true"
    android:gravity="bottom"
    >

        <Button
            android:id="@+id/start_login_but"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Login"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/start_reg_but"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/start_login_but"
            android:background="@color/bgwhite"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Create account"
            android:textColor="@color/colorPrimaryDark"


            android:textSize="13dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
